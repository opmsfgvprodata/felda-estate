
@model MVC_SYSTEM.Models.vw_KumpulanKerja
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">@GlobalResEstate.titleDeleteGroup</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="panel panel-primary">
                <div class="panel-heading">@GlobalResEstate.lblTotalRecordGroup.ToUpper()</div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="control-label col-md-3">@GlobalResEstate.hdrGroupCode</label>
                        <div class="col-md-4">
                            @Html.TextBox("Kod Kumpulan", null, htmlAttributes: new {@class = "form-control", @Value = @ViewBag.KodKumpulan, disabled = "disabled"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">@GlobalResEstate.hdrDesc</label>
                        <div class="col-md-8">
                            @Html.TextBox("Keterangan Kumpulan", null, htmlAttributes: new {@class = "form-control", @Value = @ViewBag.Keterangan, disabled = "disabled"})
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 text-center">
                    <h3>
                        <span class="label label-danger">
                            @GlobalResEstate.msgDelete
                        </span>
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <input class="btn btn-danger" type="submit" value=@GlobalResEstate.btnDelete />
        <button class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
    </div>
}