@model MVC_SYSTEM.Models.tbl_Pkjmast

@{
    ViewBag.Title = "Passport Update";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    ViewBag.DateScriptAdv = 1;
    GetConfig GetConfig = new GetConfig();
    ChangeTimeZone ChangeTimeZone = new ChangeTimeZone();
    var DateNow = ChangeTimeZone.gettimezone();
    string dateformat = GetConfig.GetData("dateformat");

    Model.fld_T2pspt = string.IsNullOrEmpty(Model.fld_T2pspt.ToString()) ? DateNow : Model.fld_T2pspt;
    if (Model.fld_T2pspt == null)
    {
        Model.fld_T2pspt = DateNow;
    }
}
