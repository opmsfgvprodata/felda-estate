@model MVC_SYSTEM.MasterModels.tblUser
@using MVC_SYSTEM.Class
@using MVC_SYSTEM.App_LocalResources

@{
    Layout = null;
    GetConfig getConfig = new GetConfig();
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Terlupa Katalaluan</h3>
</div>
@using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="panel panel-primary">
                <div class="panel-heading">Tetapan Semula Katalaluan</div>
                <div class="panel-body">
                    <div class="form-group col-lg-12">
                        <label class="control-label col-lg-4">ID Pengguna :</label>
                        <div class="col-lg-6">
                            @Html.TextBoxFor(model => model.fldUserName, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.fldUserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-lg-12">
                        <label class="control-label col-lg-4">Emel :</label>
                        <div class="col-lg-6">
                            @Html.TextBoxFor(model => model.fldUserEmail, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.fldUserEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer" style="margin-top: -20px;">
        <input class="btn btn-success" type="submit" value="Hantar" />
        <button class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
    </div>
}

