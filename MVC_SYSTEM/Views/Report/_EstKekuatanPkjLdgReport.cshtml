@using MVC_SYSTEM.Class
@model IEnumerable<MVC_SYSTEM.CustomModels.CustMod_KekuatanPekerja>

@{
    GetConfig getConfig = new GetConfig();
    int? month = ViewBag.MonthList;
    int? year = ViewBag.YearList;
    string worker = ViewBag.WorkerList;
    int bil = 1;
    //int? PekerjaTempatan = 0;
    //int? PekerjaAsing = 0;

    ChangeTimeZone ChangeTimeZone = new ChangeTimeZone();
    DateTime Todaydate = ChangeTimeZone.gettimezone();
    string uniquefilename = "KekuatanPekerjaReport" + ViewBag.UserID + "_" + Todaydate.Year.ToString() + Todaydate.Month.ToString() + Todaydate.Day.ToString() + Todaydate.Hour.ToString() + Todaydate.Minute.ToString() + Todaydate.Second.ToString();
}

@if (Model != null && Model.Count() != 0)
{
    <div id="scrollArea2" class="modal-body">
        <logo />
        <table class="table table-hover table-bordered" style="font-size: 11px;" border="0">
            <thead>
                <tr>
                    <th colspan="14" style="text-align: center; vertical-align: middle; border: none;">
                        @ViewBag.NamaSyarikat
                        <br />
                        (@GlobalResEstate.lblCompanyNo : @ViewBag.NoSyarikat)
                        <br />
                        Laporan Kekuatan Pekerja Ladang
                    </th>
                </tr>
                <tr>
                    <th rowspan="3" width="3%" bgcolor="#ffcc80" style="color: black; text-align: center; vertical-align: middle !important; border: 1px solid black;" border="1">KEPERLUAN SEBENAR</th>
                    <th colspan="3" width="3%" bgcolor="#ffcc80" style="color: black; text-align: center; vertical-align: middle !important; border: 1px solid black;" border="1">PEKERJA SEDIA ADA (ORANG)</th>
                    <th rowspan="4" width="3%" bgcolor="#ffcc80" style="color: black; text-align: center; vertical-align: middle !important; border: 1px solid black;" border="1">BAKI KEPERLUAN</th>
                </tr>
                <tr>
                    <th width="3%" bgcolor="#ffcc80" style="color: black; text-align: center; vertical-align: middle !important; border: 1px solid black;" border="1">PEKERJA TEMPATAN (OPERASI)</th>
                    <th width="3%" bgcolor="#ffcc80" style="color: black; text-align: center; vertical-align: middle !important; border: 1px solid black;" border="1">PEKERJA ASING (SYARIKAT)</th>
                    <th width="3%" bgcolor="#ffcc80" style="color: black; text-align: center; vertical-align: middle !important; border: 1px solid black;" border="1">PEKERJA KONTRAKTOR</th>

                </tr>
            </thead>
            <tbody>
                <tr>

                    @{
                        int? TotalKeperluanSebenar = Model.Select(x => x.fld_KeperluanSebenar).FirstOrDefault();
                        decimal? TotalLuasKeseluruhan = Model.Select(x => x.fld_LuasKeseluruhan).FirstOrDefault();
                        int? TotalPekerjaTempatan = Model.Where(x => x.fld_Kdrkyt == "MA").Count();
                        int? TotalPekerjaAsing = Model.Where(x => x.fld_Kdrkyt != "MA").Count();
                        int? TotalPekerjaKontraktor = Model.Select(x => x.fld_PekerjaKontraktor).FirstOrDefault();
                        int? TotalJumPkjSediaAda = TotalPekerjaAsing + TotalPekerjaTempatan + TotalPekerjaKontraktor;
                        int? TotalBakiKeperluan = TotalKeperluanSebenar - TotalJumPkjSediaAda;
                        //decimal? NisbahKeperluanSebenar = Convert.ToInt32(TotalLuasKeseluruhan / TotalKeperluanSebenar);
                        decimal? NisbahKeperluanSebenar = 0;

                        if (TotalKeperluanSebenar != 0)
                        {
                            NisbahKeperluanSebenar = Convert.ToInt32(TotalLuasKeseluruhan / TotalKeperluanSebenar);
                        }
                        else
                        {

                            NisbahKeperluanSebenar = 0;
                        }
                        //decimal? NisbahPkjSediaAda = Convert.ToInt32(TotalLuasKeseluruhan / TotalJumPkjSediaAda);

                        decimal? NisbahPkjSediaAda = 0;

                        if (TotalJumPkjSediaAda != 0)
                        {
                            NisbahPkjSediaAda = Convert.ToInt32(TotalLuasKeseluruhan / TotalJumPkjSediaAda);
                        }
                        else
                        {

                            NisbahPkjSediaAda = 0;
                        }
                    }

                    <td rowspan="2" align="center" style="vertical-align: middle !important; border: 1px solid black;" border="1">
                        @TotalKeperluanSebenar
                    </td>
                    <td align="center" style="vertical-align: middle !important; border: 1px solid black;" border="1">
                        @TotalPekerjaTempatan
                    </td>
                    <td align="center" style="vertical-align: middle !important; border: 1px solid black;" border="1">
                        @TotalPekerjaAsing
                    </td>
                    <td align="center" style="vertical-align: middle !important; border: 1px solid black;" border="1">
                        @TotalPekerjaKontraktor
                    </td>
                    <td rowspan="3" align="center" style="vertical-align: middle !important; border: 1px solid black;" border="1">
                        @TotalBakiKeperluan
                    </td>
                </tr>
                <tr>
                    <td colspan="3" align="center" style="vertical-align: middle !important; border: 1px solid black;" border="1">
                        @TotalJumPkjSediaAda
                    </td>
                </tr>
                <tr>
                    <td align="center" style="vertical-align: middle !important; border: 1px solid black;" border="1">
                        1:@NisbahKeperluanSebenar
                    </td>
                    <td colspan="3" align="center" style="vertical-align: middle !important; border: 1px solid black;" border="1">
                        1:@NisbahPkjSediaAda
                    </td>
                </tr>
            </tbody>
        </table>
        <newpage />
    </div>


    if (ViewBag.Print == null)
    {
        <div style="text-align:right; margin-top:10px">
            <a class="btn btn-default btn-sm" href="#" id="printpage">
                <span class="glyphicon glyphicon-print"> </span> @GlobalResEstate.btnPrint
            </a>
            <a class="btn btn-default btn-sm" href="#" id="downloadpdf">
                <span><img src="~/Asset/Images/pdf-icon.png" width="20px" height="20px" /></span> @GlobalResEstate.btnDownloadPdf
            </a>
            <a class="btn btn-default btn-sm" href="#" onclick="HTMLtoExcel('@uniquefilename')">
                <span><img src="~/Asset/Images/excel-icon.png" width="20px" height="20px" /></span> @GlobalResEstate.btnDownloadExcel
            </a>
        </div>
    }
}

@if (Model.Count() == 0)
{
    <div id="scrollArea2" class="modal-body" style="text-align: center">
        <p style="color: red">@ViewBag.Message</p>

    </div>
}

<style>
    #page td {
        padding: 2px;
        margin: 2px;
    }
</style>

<script src="~/Asset/Scripts/FromHTML.js"></script>
<script src="~/Asset/Scripts/FileSaver.js"></script>

<script>
    $(document).ready(function () {
        $("#printpage").click(function () {
            var DivElement = document.getElementById("scrollArea2").innerHTML;
            var oldPage = document.body.innerHTML;
            document.body.innerHTML = DivElement;
            window.print();
            document.body.innerHTML = oldPage;
        })

        $("#downloadpdf").click(function () {
          var myHtml = document.getElementById('scrollArea2').innerHTML;
            $.ajax({
                type: 'POST',
                url: '@Url.Action("ConvertPDF2", "Report")',
                dataType: 'json',
                contentType: 'application/json',
                data: JSON.stringify({ myHtml: myHtml, filename: "@uniquefilename", reportname: "MinimumWageReport" }),
                success: function (result) {
                    if (result.success) {
                        var win = window.open(result.link, '_blank');
                        win.focus();
                    } else {
                        $.simplyToast(result.msg, result.status);
                    }
                },
                error: function (error) {
                    $.simplyToast('Sorry to many data', 'danger');
                }
            });
            return false;
        });

    });
</script>



