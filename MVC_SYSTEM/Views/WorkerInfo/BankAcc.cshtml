@model MVC_SYSTEM.Models.tbl_PkjmastBankAccountViewModelEdit
@using MVC_SYSTEM.Class;

@{
    ViewBag.Title = "BankAcc";
    GetConfig GetConfig = new GetConfig();
    string statusPkj = GetConfig.GetWebConfigDesc(Model.fld_Kdaktf, "statusaktif", Model.fld_NegaraID, Model.fld_SyarikatID);
}

<section class="content-wrapper main-content clear-fix">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResEstate.lblWorkerAccountStatusEdit</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResEstate.lblWorkerAcc</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-md-3">@GlobalResEstate.hdrNoPkj</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.fld_Nopkj, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.fld_Nopkj, "", new { @class = "text-danger" })
                            </div>
                            <label class="control-label col-md-2">@GlobalResEstate.hdrNoKp</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(model => model.fld_Nokp, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.fld_Nokp, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">@GlobalResEstate.hdrName</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.fld_Nama, new { @class = "form-control", @readonly = "readonly" })
                                @Html.ValidationMessageFor(model => model.fld_Nama, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">@GlobalResEstate.lblWorkerStatus</label>
                            <div class="col-md-3">
                                @Html.TextBox("fld_Kdaktf", statusPkj, new { @class = "form-control", @disabled = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">@GlobalResEstate.lblAccStatus</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.fld_StatusAkaun, new SelectList(ViewBag.StatusAkaunList, "Value", "Text"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_StatusAkaun, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">@GlobalResEstate.lblBankName</label>
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.fld_Kdbank, new SelectList(ViewBag.BankList, "Value", "Text"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_Kdbank, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">@GlobalResEstate.lblNoAcc</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.fld_NoAkaun, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_NoAkaun, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResEstate.btnSave />
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
