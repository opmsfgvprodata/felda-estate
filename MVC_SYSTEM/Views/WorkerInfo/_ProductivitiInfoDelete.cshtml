@using MVC_SYSTEM.Class
@model MVC_SYSTEM.ViewingModels.tbl_Produktiviti

@{
    @Scripts.Render("~/bundles/jqueryval")
    GetConfig config = new GetConfig();
    string namePkj = config.getPkjNameFromPkjNo(Model.fld_Nopkj, Model.fld_NegaraID, Model.fld_SyarikatID, Model.fld_WilayahID, Model.fld_LadangID, ViewBag.host, ViewBag.user, ViewBag.catalog, ViewBag.pass);
}

<section class="content-wrapper main-content clear-fix">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResEstate.lblProductivityInfoDelete</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResEstate.lblProductvtInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.hdrNoPkj:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_Nopkj, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.hdrName:</label>
                            <div class="col-sm-7">
                                @Html.TextBox("fld_Kdaktf", namePkj, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.hdrCategory:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_JenisPelan, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                            <label class="control-label col-sm-3">@GlobalResEstate.hdrTarget:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_Targetharian, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.hdrUnit:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_Unit, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                            <label class="control-label col-sm-3">@GlobalResEstate.hdrTargetWorkingDay:</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(model => model.fld_HadirKerja, htmlAttributes: new { @class = "form-control", @disabled = "true" })
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.fld_ProduktivitifID)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 text-center">
                    <h3>
                        <span class="label label-danger">
                            @GlobalResEstate.msgDelete
                        </span>
                    </h3>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-danger" type="submit" value=@GlobalResEstate.btnDelete>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>




