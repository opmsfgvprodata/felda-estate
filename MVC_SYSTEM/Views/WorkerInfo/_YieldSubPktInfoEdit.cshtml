@using MVC_SYSTEM.Class
@model MVC_SYSTEM.Models.tbl_HasilSawitSubPktModelViewEdit
@{
    @Scripts.Render("~/bundles/jqueryval")

    //TimeZone timezone = new ;
}

<section class="content-wrapper main-content clear-fix">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 class="modal-title">@GlobalResEstate.lblYieldInfoUpdate</h3>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="panel panel-primary">
                    <div class="panel-heading">@GlobalResEstate.lblYieldInfo</div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.lblLevelCode:</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_KodSubPeringkat, null, new { @class = "form-control", @disabled = "true" })
                                @Html.ValidationMessageFor(model => model.fld_KodSubPeringkat, "", new { @class = "text-danger" })
                            </div>
                            <label class="control-label col-sm-2">@GlobalResEstate.lblLuasHasil:</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_LuasHektar, null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_LuasHektar, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">@GlobalResEstate.lblMonth:</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_Bulan, null, new { @class = "form-control", @disabled = "true" })
                                @Html.ValidationMessageFor(model => model.fld_Bulan, "", new { @class = "text-danger" })
                            </div>
                            <label class="control-label col-sm-2">@GlobalResEstate.lblYear:</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_Tahun, null, new { @class = "form-control", @disabled = "true" })
                                @Html.ValidationMessageFor(model => model.fld_Tahun, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">@GlobalResEstate.hdrYield (@GlobalResEstate.lblTan):</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(model => model.fld_HasilTan, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.fld_HasilTan, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.fld_ID)
                        @Html.HiddenFor(model => model.fld_KodSubPeringkat)
                        @Html.HiddenFor(model => model.fld_Bulan)
                        @Html.HiddenFor(model => model.fld_Tahun)
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <input class="btn btn-success" type="submit" value=@GlobalResEstate.btnSave>
            <button class="btn btn-warning" data-dismiss="modal">@GlobalResEstate.btnBack</button>
        </div>
    }
</section>

<script>
    $("form").removeData("validator");
    $("form").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse("form");
</script>
